<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/card_width"
    android:layout_height="@dimen/card_height"
    android:layout_margin="@dimen/spacing_6"
    android:background="@drawable/bg_card"
    android:padding="@dimen/spacing_16"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivPlaylistImage"
        android:layout_width="@dimen/card_image_size"
        android:layout_marginTop="@dimen/spacing_16"
        android:layout_height="@dimen/card_image_size"
        android:background="@drawable/cleansound"
        android:contentDescription="@string/playlist_image_desc"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPlaylistName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_8"
        android:textAppearance="@style/Text.Headings.H2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivPlaylistImage"
        tools:text="Hot Hits Indonesia" />

    <TextView
        android:id="@+id/tvPlaylistType"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/spacing_8"
        tools:text="Playlist"
        android:textAppearance="@style/Text.Body.Body2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPlaylistName" />


</androidx.constraintlayout.widget.ConstraintLayout>