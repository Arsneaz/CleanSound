<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/splash">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.cleansound.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_trackDetailFragment"
            app:destination="@id/trackDetailFragment"
            app:popUpTo="@id/navigation_home" />
        <action
            android:id="@+id/action_navigation_home_to_featuredTracksFragment"
            app:destination="@id/featuredTracksFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.cleansound.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_navigation_dashboard_to_trackDetailFragment"
            app:destination="@id/trackDetailFragment"
            app:popUpTo="@id/navigation_dashboard" />

    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.cleansound.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" >
        <action
            android:id="@+id/action_navigation_notifications_to_trackDetailFragment"
            app:destination="@id/trackDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.cleansound.ui.auth.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_loginFragment_to_navigation_home"
            app:destination="@id/navigation_home"/>
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.cleansound.ui.auth.RegisterFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_profileSetupFragment"
            app:destination="@id/profileSetupFragment" />
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/splash"
        android:name="com.example.cleansound.ui.splash.Splash"
        android:label="Splash" >
        <action
            android:id="@+id/action_splash_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/trackDetailFragment"
        android:name="com.example.cleansound.ui.details.TrackDetailFragment"
        android:label="TrackDetailFragment">
        <argument
            android:name="trackId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.example.cleansound.ui.FavoriteFragment"
        android:label="FavoriteFragment" />

    <fragment
        android:id="@+id/profileSetupFragment"
        android:name="com.example.cleansound.ui.auth.ProfileSetupFragment"
        android:label="ProfileSetupFragment" >
        <action
            android:id="@+id/action_profileSetupFragment_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>
    <fragment
        android:id="@+id/featuredTracksFragment"
        android:name="com.example.cleansound.ui.home.FeaturedTracksFragment"
        android:label="FeaturedTracksFragment">
        <argument
            android:name="playlistId"
            app:argType="string" />
        <action
            android:id="@+id/action_featuredTracksFragment_to_trackDetailFragment"
            app:destination="@id/trackDetailFragment" />
    </fragment>

</navigation>